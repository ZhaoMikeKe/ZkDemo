<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.mydemo.DimenTestActivity">

    <Button
        android:id="@+id/bt"
        android:layout_width="@dimen/base100dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="赵珂"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="wu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt" />

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="den"
        app:layout_constraintTop_toBottomOf="@+id/textview" />
    <TextView
        android:id="@+id/d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="den"
        app:layout_constraintTop_toBottomOf="@+id/d" />
    <TextView
        android:id="@+id/d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="den"
        app:layout_constraintTop_toBottomOf="@+id/d1" />
    <TextView
        android:id="@+id/d3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="den"
        app:layout_constraintTop_toBottomOf="@+id/d2" />
</android.support.constraint.ConstraintLayout>
